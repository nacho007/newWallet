<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_card_flatten"
    android:background="@drawable/shape_card_top">

    <TextView
        android:id="@+id/textViewCurrencyheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAmountheader"
        android:layout_toLeftOf="@+id/textViewAmountheader"
        android:text="USD"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewAmountheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/colorAccent"
        android:text="200"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />


    <LinearLayout
        android:id="@+id/linearLayoutCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/cardRelativeLayout"
                android:background="@color/colorWhite" />

            <RelativeLayout
                android:id="@+id/cardRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:background="@drawable/shape_card"
                android:padding="@dimen/padding"
                android:visibility="visible">


                <TextView
                    android:id="@+id/textViewCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textViewAmount"
                    android:layout_toLeftOf="@+id/textViewAmount"
                    android:text="USD"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimaryDark"
                    android:text="200"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />


                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/svg_card_logo" />

                <TextView
                    android:id="@+id/textViewNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="1234     1234     1234     1234"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp" />


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutCardContent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/cardRelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/shape_last_card"
            android:padding="@dimen/padding"
            android:visibility="visible">


            <TextView
                android:id="@+id/textViewCurrency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewAmount2"
                android:layout_toLeftOf="@+id/textViewAmount2"
                android:text="USD"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewAmount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/holo_blue_bright"
                android:text="200"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />


            <ImageView
                android:id="@+id/logoImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/svg_card_logo" />

            <TextView
                android:id="@+id/textViewNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="1234     1234     1234     1234"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>